<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <EditText
        android:id="@+id/textEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:hint="Enter text to speak...."
        android:minHeight="100dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/speakBtn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEdit"
        android:drawableLeft="@drawable/ic_speak"
        android:drawablePadding="5dp"
        android:text="Speak" />
    <Button
        android:id="@+id/stopBtn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textEdit"
        android:drawableStart="@drawable/ic_stop"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:text="Stop" />

    <TextView
        android:id="@+id/textTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below = "@id/speakBtn"
        android:gravity="center"
        android:text = "speech content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
    />

    <Button
        android:id="@+id/startListenBtn"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTv"
        android:drawablePadding="5dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Start Listening" />

</RelativeLayout>